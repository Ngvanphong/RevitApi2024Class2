<Window x:Class="RevitApi2024.ProgressBarWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitApi2024"
             mc:Ignorable="d" 
             Height="200" Width="400">
    <Grid>
        <ProgressBar Background="Gray" Minimum="0" Maximum="100" Foreground="Pink"
                     Height="30" Name="progressBar">
        </ProgressBar>
        <TextBlock Width="50" Height="30" Name="txtPercent"/>

    </Grid>
</Window>
